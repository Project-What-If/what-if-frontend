{
    "env": {
        "browser": true,
        "node": true,
        "es2020": true
    },
    "extends": ["eslint:recommended", "airbnb-base", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "no-debugger": "off",
        "import/prefer-default-export": "off",
        "object-shorthand": "off",
        "no-nested-ternary": "off",
        "semi": "error",
        "no-restricted-syntax": "off",
        "no-prototype-builtins": "off",
        "no-continue": "off",
        "guard-for-in": "off",
        "no-plusplus": "off",
        "consistent-return": "off",
        "prefer-template": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"],
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
